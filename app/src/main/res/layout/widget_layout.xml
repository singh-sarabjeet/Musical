<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="83dp"
        android:layout_height="83dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/widget_song_title" />

        <TextView
            android:id="@+id/widget_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/widget_song_artist" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_play_button"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/widget_next_button"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>